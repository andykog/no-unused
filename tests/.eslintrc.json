{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json",
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true
    }
  },
  "plugins": ["no-unused"],
  "rules": {
    "no-sparse-arrays": 1,
    "no-unused/no-unused": 1
  }
}
